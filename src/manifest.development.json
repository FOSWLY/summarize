{
    "manifest_version": 3,
    "name": "[FOSWLY] - Summarize articles",
    "description": "A small extension that allows you to quickly retell articles",
    "author": "Toil",
    "homepage_url": "https://github.com/FOSWLY/summarize-articles",
    "version": "1.0.0",
    "icons": {
        "16": "/logo16.png",
        "32": "/logo32.png",
        "48": "/logo48.png",
        "96": "/logo96.png",
        "128": "/logo128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "clipboardWrite",
        "tabs",
        "webRequest"
    ],
    "host_permissions": ["*://foswly-sa.toiloff.ru/*"]
}